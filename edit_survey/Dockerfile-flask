FROM python:latest

RUN apt-get update
#RUN apt-get install -y python3-gi python3-gi-cairo gegl
RUN apt-get install -y libgirepository1.0-dev gcc libcairo2-dev pkg-config python3-dev

COPY ./requirements-flask.txt /app/requirements.txt
WORKDIR /app
RUN pip install -r requirements.txt

COPY . /app

CMD ["gunicorn", "-b", "0.0.0.0:8000", "webserver:app"]
